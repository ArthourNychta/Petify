<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".gettoknowyourpagemenu.ArticleDetail"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivImageArtikel2"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tvJudulArtikel2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Judul Artikel"
        android:gravity="center"
        android:textSize="25sp"
        android:padding="10dp"
        android:layout_below="@+id/ivImageArtikel2"/>

    <TextView
        android:id="@+id/tvisiArtikel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:layout_below="@id/tvJudulArtikel2"/>

</RelativeLayout>